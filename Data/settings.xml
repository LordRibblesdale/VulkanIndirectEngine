<?xml version="1.0" encoding="UTF-8" ?>
<Settings>
    <program name="IndirectEngine" majorVersion="1" minorVersion="0" patchVersion="0"/>
    <resolution width="1280" height="720"/>
    <language language="it" country="IT"/>

    <!-- Limit: number of frames per second, type=[off,vsync,triple] -->
    <framerate limit="144" type="vsync"/>

    <!-- Strictness = [false,true,only_for_{}], with {} a specific feature -->
    <requirements strictness="false">
        <gpu type="discrete"/>
        <memory minimum="16"/> <!-- MB -->
    </requirements>

    <debug enabled="true">
        <vlayer name="VK_LAYER_KHRONOS_validation"/>
    </debug>
</Settings>